@model NicheFinalPro.ViewModels.RegisterViewModel

<form asp-act="Register" asp-controller="Users" method="post">

    <div class="col-md-12">
        <div class="form-group">
            <label>First Name</label>
            <input asp-for="FirstName" disabled type="text" />
        </div>
        <div class="form-group">
            <label>Last Name</label>
            <input asp-for="LastName" disabled type="text" />
        </div>
        <div class="form-group">
            <label>Email</label>
            <input asp-for="Email" disabled type="email" />
        </div>
        <div class="form-group">
            <label>Username</label>
            <input asp-for="UserName" disabled type="text" />
        </div>
        <div class="form-group">
            <label>Password</label>
            <input asp-for="Password" disabled type="password"/>
        </div>
        <div class="form-group">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <center>
                <button type="submit" class="btn btn-success">Create Account</button>
            </center>
        </div>
    </div>
</form>
