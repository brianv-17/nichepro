@model NicheFinalPro.Models.Event

<form asp-act="Edit" asp-controller="Events" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="col-md-12">
        <div class="form-group">
            <label>Title</label>
            <input asp-for="Title" type="text" />
        </div>
        <div class="form-group">
            <label>Theme</label>
            <input asp-for="Theme" type="text" />
        </div>
        <div class="form-group">
            <label>Place</label>
            <input asp-for="Place" type="text" />
        </div>
        <div class="form-group">
            <label>Description</label>
            <input asp-for="Description" type="text" />
        </div>
        <div class="form-group">
            <label>Date</label>
            <input asp-for="Date" type="text" />
        </div>
        <div class="form-group">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <center>
                <button type="submit" class="btn btn-warning">Edit Event</button>
                <a asp-action="Index" asp-controller="Events" class="btn">Return to Feed</a>
            </center>
        </div>
    </div>
</form>
